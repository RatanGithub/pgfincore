#!/bin/sh
echo "MODULES = pgfincore" > ./Makefile

PG_VER=`pg_config --version|awk '{print $2}'`
PG_VER=8.3.0
if [[ ($PG_VER < '8.4.0') ]]
then
  echo "DATA_built = pgfincore_83.sql" >> ./Makefile
  echo "DATA = uninstall_pgfincore_83.sql" >> ./Makefile
else
  echo "DATA_built = pgfincore_84.sql" >> ./Makefile
  echo "DATA = uninstall_pgfincore_84.sql" >> ./Makefile
fi

cat <<EOF >> ./Makefile
DOCS = README.pgfincore
REGRESS = pgfincore

PG_LIBS = -lpgfincore
SHLIBS_LINK = -lpgfincore
# PG_CPPFLAGS = -lpgfincore

PGXS := \$(shell pg_config --pgxs)
include \$(PGXS)
EOF
